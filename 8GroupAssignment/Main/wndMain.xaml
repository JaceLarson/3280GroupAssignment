<Window x:Class="_8GroupAssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8GroupAssignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFD6D6D6">
        <Button x:Name ="AddInvoiceBtn" Content="Add Invoice" HorizontalAlignment="Left" Margin="116,142,0,0" VerticalAlignment="Top" Width="141" Height="107" Background="#FF6F6F6F"/>
        <Button x:Name ="EditInvoiceBtn" Content="Edit Invoice" HorizontalAlignment="Left" Margin="335,142,0,0" VerticalAlignment="Top" Width="141" Height="107" Background="#FF6F6F6F"/>
        <Button x:Name ="DeleteInvoiceBtn" Content="Delete Invoice" HorizontalAlignment="Left" Margin="554,142,0,0" VerticalAlignment="Top" Width="141" Height="107" Background="#FF6F6F6F"/>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <MenuItem Header="Update Table" Click="MenuItem_Click"/>
            <MenuItem Header="Search Invoices" Click="MenuItem_Click"/>
        </Menu>

    </Grid>
</Window>
